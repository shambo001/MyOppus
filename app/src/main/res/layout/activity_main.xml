<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.oppus.com.myoppus.MainActivity">

    <Button
        android:id="@+id/maincstmrbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainserviceproviderbtnbtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/maincustomerbtnbutton"
        tools:width="200dp" />

    <Button
        android:id="@+id/mainserviceproviderbtnbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/maincstmrbtn"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/maincstmrbtn"
        android:layout_marginTop="52dp"
        android:text="@string/mainserviceproviderbutton"
        tools:width="200dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/servicelist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/maincstmrbtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="146dp" />


</RelativeLayout>
